{
  "name": "api",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "check-types": "tsc --noEmit",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/src/index.js",
    "db:push": "prisma db push --schema ./prisma/schema",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate --schema ./prisma/schema",
    "db:migrate": "dotenv -e .env -- prisma migrate dev"
  },
  "prisma": {
    "schema": "./schema"
  },
  "dependencies": {
    "@hono/trpc-server": "^0.3.4",
    "@prisma/client": "^6.8.2",
    "@trpc/client": "^11.1.2",
    "@trpc/server": "^11.1.2",
    "better-auth": "^1.2.8",
    "dotenv": "^16.5.0",
    "hono": "^4.7.10",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/bun": "^1.2.13",
    "dotenv-cli": "^8.0.0",
    "prisma": "^6.8.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3"
  }
}
