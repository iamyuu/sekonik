{
  "name": "api",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc && tsc-alias",
    "typecheck": "tsc --noEmit",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile api",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/src/index.js",
    "db:setup": "dotenv -e .env -- prisma db push --schema ./src/database/schema",
    "db:studio": "prisma studio"
  },
  "prisma": {
    "schema": "./src/database/schema"
  },
  "dependencies": {
    "@hono/trpc-server": "^0.3.4",
    "@prisma/client": "^6.8.2",
    "@t3-oss/env-core": "^0.13.4",
    "@trpc/client": "^11.1.2",
    "@trpc/server": "^11.1.2",
    "better-auth": "^1.2.8",
    "hono": "^4.7.10",
    "nanoid": "^5.1.5",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0",
    "zod": "^3.25.20"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "dotenv-cli": "^8.0.0",
    "prisma": "^6.8.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3"
  }
}
