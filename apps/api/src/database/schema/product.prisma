model Product {
  id                   String   @id @default(ulid())
  sku                  String   @unique
  slug                 String   @unique
  name                 String
  description          String
  price                Decimal
  imageUrl             String?
  stockQuantity        Int      @default(0)
  minimumOrderQuantity Int      @default(1)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  @@map("product")
}